---
import Section from "@/components/Section.astro"
import { skills } from "@cv"
---

<Section title="Capacidades">

    <ul> {
        skills.map(({name}) => (
            <li>
                <span>{name}</span>    
            </li>
        ))
    }
    </ul>

</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px; 
        flex-wrap: wrap;
    }

    li {
        border-radius: 6px;
        background-color: #747474;
        color: white;
        font-size: .8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;

    }
</style>
